# config/research.env (Research-oriented configuration)

# Core Settings
HOST_PORT_LIBRECHAT=3080
HOST_PORT_OLLAMA=11434

# Component Versions (Pinned for compatibility)
LIBRECHAT_VERSION=0.6.9
MONGODB_VERSION=6.0.6
MEILISEARCH_VERSION=1.3.0
OLLAMA_VERSION=0.1.27

# Feature Toggles
ENABLE_GPU=true

# Model Configuration
DEFAULT_MODELS=llama3,mistral,gemma,phi3

# Resource Allocation (Optimized for research)
OLLAMA_MEMORY_LIMIT=16G
OLLAMA_CPU_LIMIT=0.75
LIBRECHAT_MEMORY_LIMIT=4G
LIBRECHAT_CPU_LIMIT=0.50
MONGODB_MEMORY_LIMIT=2G
MEILISEARCH_MEMORY_LIMIT=1G

# Research Settings
ENABLE_AUTH=false
ENABLE_MODEL_METRICS=true
ENABLE_EXPERIMENT_TRACKING=true
ENABLE_MODEL_COMPARISON=true
ENABLE_BATCH_INFERENCE=true